{#
  page--gothic.html.twig

  This template extends the base page template from the Bootstrap 5 theme and
  appends the `theme-gothic` class to the body element. The base style
  provided by style.css defines the look of the classic Gothic variation.

  Available variables:
    - body_attributes: HTML attributes for the <body> element.
    - attributes: HTML attributes for the <html> element.
    - page: A structured array of all the page content.
#}

{% extends '@bootstrap5/page.html.twig' %}

{% block body_attributes %}
  {% set body_attributes = body_attributes|default(create_attribute()).addClass('theme-gothic') %}
  {{ parent() }}
{% endblock %}
